{
  "name": "toolbox-pro",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Edit, convert, and enhance images, videos, and audio files with our suite of professional tools.",
  "author": {
    "name": "Hadi Karaki"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsc && vite",
    "build": "npx cross-env NODE_ENV=production tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "cross-env NODE_ENV=production vite preview",
    "package": "npx cross-env NODE_ENV=production electron-builder --dir",
    "package:win": "npx cross-env NODE_ENV=production electron-builder --win",
    "package:mac": "NODE_ENV=production electron-builder --macos",
    "package:linux": "NODE_ENV=production electron-builder --linux",
    "make": "npx cross-env NODE_ENV=production electron-builder"
  },
  "dependencies": {
    "@emotion/styled": "^11.14.1",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@mui/material": "^7.1.2",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/vite": "^4.1.10",
    "electron-updater": "^6.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.3",
    "redux-persist": "^6.0.0",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.11",
    "vite-plugin-electron": "^0.29.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/graceful-fs": "^4.1.9",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "i": "^0.3.7",
    "npm": "^11.4.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
